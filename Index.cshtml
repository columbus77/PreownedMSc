@using PagedList;
@using PagedList.Mvc;

@model IPagedList<PreOwned268.Models.Purchase>

@{
    ViewBag.Title = "Index";
}

<h2>List of Vehicle Sale</h2>
@using (@Html.BeginForm("Index", "Purchases2", FormMethod.Get))
{
    <b> Search By:</b>
    @Html.RadioButton("searchBy", "Cust.FName", true) <text> Customer Name</text>
    @Html.RadioButton("searchBy", "Staff.FirstName") <text> Staff Name</text><br /><br />
    @Html.TextBox("search") <input type="submit" value="search" />
    @Html.ActionLink("Back to List", "Index")

}
 <br /><p>   @Html.ActionLink("Click to Make Sale", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Cust.FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Staff.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Trans.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().VAT)
        </th>
        <th></th>
    </tr>

@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4">
            No records match search criteria
        </td>
    </tr>
}
else
{

    foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cust.FName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Staff.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trans.Make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VAT)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PurchaseID }) |
            @Html.ActionLink("Details", "Details", new { id = item.PurchaseID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.PurchaseID })
        </td>
    </tr>
    }
}
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchBy = Request.QueryString["search"] })
, new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })
